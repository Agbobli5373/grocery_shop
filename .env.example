# Production Environment Variables for Grocery Shop
# Copy this file to .env and update the values

# Database Configuration
DB_USER=grocery_prod_user
DB_PASSWORD=your_secure_database_password_here

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# JWT Security
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_256_bits_here

# API Configuration
API_URL=https://api.yourdomain.com

# Frontend Configuration
FRONTEND_PORT=3000

# Docker Image Tags (Optional - defaults to 'latest')
BACKEND_TAG=latest
FRONTEND_TAG=latest

# Production Domain (if using custom domain)
DOMAIN=yourdomain.com

# SSL Configuration (if using SSL)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Redis Configuration (if adding Redis later)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Monitoring and Logging
LOG_LEVEL=WARN
ENABLE_METRICS=true
ENABLE_TRACING=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=30

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
